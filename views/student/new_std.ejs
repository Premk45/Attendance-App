<%- layout("./layouts/boilerplate.ejs") %>

<body class="newStdBody">

    <form class="form" action="/home/new_std" method="POST">

        <div class="head mt-3">
            <h3>Student Details</h3>
        </div>

        <div class="mb-3 mt-3 form-floating">
            <input name="student[image]" type="text" class="in form-control" id="s_image" placeholder="Stdudent Image URL/Link">
            <label for="s_image">Stdudent Image URL/Link</label>
        </div>

        <div class="mb-3 form-floating">
            <input name="student[name]" type="text" class="in form-control" id="first_name" placeholder="First Name">
            <label for="first_name">First Name</label>
        </div>

        <div class="mb-3 form-floating" >
            <input name="student[last_name]" type="text" class="in form-control" id="last_name" placeholder="Last Name">
            <label for="last_name">Last Name</label>
        </div>

        <div class="mb-3 form-floating" >
            <input name="student[DOB]" type="date" class="in form-control" id="dob" placeholder="DOB">
            <label for="dob">DOB</label>
        </div>
        
        <div class="mb-3 form-floating" >
            <input name="student[father_name]" type="text" class="in form-control" id="f_name" placeholder="Father Name">
            <label for="f_name">Father Name</label>
        </div>

        <div class="mb-3 form-floating" >
            <input name="student[mother_name]" type="text" class="in form-control" id="m_name" placeholder="Mother Name">
            <label for="m_name">Mother Name</label>
        </div>

        <div class="mb-3 form-floating" >
            <input name="student[s_phone]" type="text" class="in form-control" id="s_phone" placeholder="Student Phone">
            <label for="s_phone">Student Phone</label>
        </div>

        <div class="mb-3 form-floating" >
            <input name="student[p_phone]" type="text" class="in form-control" id="p_phone" placeholder="Parent Phone">
            <label for="p_phone">Parent Phone</label>
        </div>

        <div class="savebtn">
            <button class="btn btn-primary btnsave">Add</button>
        </div>
  
    </form>

</body>