<% layout('./layouts/boilerplate') -%>
<body>

    <h1 class="mt-3 mb-3">Viewing <%= student.name + ' ' + student.last_name %>`s Details</h1>

    <div class="card mb-3 viewStdCard" style="width: 50rem;">
        <img src="<%= student.image %>" class="card-img-top cimg" alt="...">
        <br>
        <div class="card-body cbody">
          <h2 class="card-title mb-3">Full Name : <%= student.name + ' ' + student.last_name %></h2>
          <p> <b> Date Of Birth : </b> &nbsp; <%= student.DOB.toLocaleString('en-US'); %> </h5>
          <p> <b> Father Name : </b> &nbsp; <%= student.father_name %> </p>
          <p> <b> Mother Name : </b> &nbsp; <%= student.mother_name %> </p>
          <p> <b> Student Ph. No : </b> &nbsp; <%= student.s_phone %> </p>
          <p> <b> Parent Ph. No : </b> &nbsp; <%= student.p_phone %> </p>
          <br>
          <div class="btns">
            <a href="/home/allStd/<%= student.id %>/editStd" 
                class="btn btn-primary btnEdit">
                Edit
              </a>
            <form method="post" action="/home/allStd/<%= student.id %>/deleteStd?_method=DELETE">
              <button 
                class="btn btn-danger btnDelete">
                Delete
              </button>
            </form>
          </div>
        </div>
    </div>
</body>
